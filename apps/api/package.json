{
  "name": "@subtrack/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "bun db:generate && tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production bun dist/index.js",
    "dev": "cross-env NODE_ENV=development bun run --hot src/index.ts",
    "clean": "rm -rf dist/ .turbo/",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@subtrack/shared": "workspace:*",
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jose": "^6.1.3",
    "tsc-alias": "^1.8.16",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@subtrack/eslint-config": "workspace:*",
    "@subtrack/typescript-config": "workspace:*",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "prisma": "^7.2.0",
    "typescript": "^5.9.3"
  }
}
