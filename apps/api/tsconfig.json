{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@subtrack/typescript-config/base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "replaceExtensions": {
      ".ts": ".js"
    }
  }
}
